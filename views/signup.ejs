<!doctype html>
<html lang="en">
    
<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/layout.ejs')%>
        <h2><%- msg %></h2>
        <div class="container">
            <h1 class="heading"><b>Sign Up</b></h1>

            <div class="">
                <!-- <div class="col-md-3">&nbsp;</div> -->
                <div class="">
                <% if(session.user_id) { %>

                    <h1>Hi User, Welcome</h1>

                    <a href="/login/logout" class="">Logout</a>

                <% } else { %>

                    <div class="box">
                        <div class="card-body">
                            <form method="post" action="/signup">
                                <div class="">
                                    <label>Email Address</label>
                                    <input type="email" name="user_email_address" class="formItem" />
                                </div><br>
                                <div class="">
                                    <label>Password</label>
                                    <input type="password" name="user_password" class="formItem" />
                                </div><br>
                                <div class="">
                                    <label>Confirm Password</label>
                                    <input type="password" name="re_password" class="formItem" />
                                </div><br>
                                <div class="">
                                    <input type="submit" class="submit" value="Sign up" />
                                </div>
                            </form>
                        </div>
                    </div>

                <% } %>
                </div>
            </div>
        </div>
    </body>
</html>

